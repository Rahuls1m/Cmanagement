<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragnment.dashboard">

   <androidx.cardview.widget.CardView
       android:id="@+id/dash_card"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintVertical_bias="0"
       android:layout_marginHorizontal="10dp"
       android:layout_marginTop="70dp"
       app:cardCornerRadius="10dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#BAF3DA57">


           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/cir"
               android:layout_width="80dp"
               android:layout_height="80dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintVertical_bias="0"
               android:src="@drawable/ic_baseline_account_circle_24"
               />
            <TextView
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cir"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Student Name"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="10dp"/>
           <TextView
               android:id="@+id/s_class"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/s_name"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:text="Class Details"
               android:textSize="16sp"
               android:gravity="center"
               android:layout_marginBottom="10dp"
               app:layout_constraintVertical_bias="0"
               android:layout_marginTop="10dp"/>



       </androidx.constraintlayout.widget.ConstraintLayout>


   </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>